{
  "name": "@blockstack/waffle",
  "description": "Blockstack UI components built using React and styled-components with styled-system.",
  "version": "1.0.0-alpha.0",
  "author": "Blockstack Product Team",
  "dependencies": {
    "@styled-system/css": "5.0.23",
    "@styled-system/should-forward-prop": "^5.1.2",
    "@types/color": "^3.0.0",
    "@types/styled-components": "^4.1.19",
    "@types/styled-system": "^5.1.2",
    "@types/styled-system__css": "^5.0.4",
    "color": "3.1.2",
    "prop-types": "^15.7.2",
    "react-spring": "8.0.27",
    "styled-system": "5.1.2",
    "use-dark-mode": "2.3.1",
    "use-events": "^1.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/core": "7.6.2",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.6.2",
    "@babel/plugin-transform-object-assign": "7.2.0",
    "@babel/plugin-transform-runtime": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "3.2.0",
    "babel-plugin-react-remove-properties": "0.3.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "cross-env": "6.0.3",
    "fs-extra": "8.1.0",
    "glob": "7.1.4",
    "path": "0.12.7",
    "prettier": "^1.18.2",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "rimraf": "3.0.0",
    "shx": "^0.3.2",
    "styled-components": "^4.4.0",
    "terser-webpack-plugin": "^2.1.2",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-assets-manifest": "^3.1.1",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-cli": "^3.3.9"
  },
  "homepage": "https://waffle.blockstack.design/",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.ts": [
      "tslint -c tslint.json"
    ],
    "**/*.+(js|jsx|ts|tsx|d.ts|md|mdx)": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "lib/index",
  "peerDependencies": {
    "react": "16.x",
    "react-dom": "16.x",
    "styled-components": "4.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/blockstackpbc/blockstack-ui",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:js && && run build:types && npm run build:webpack",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "build:watch": "nodemon -w src -x 'rm .babelrc &> /dev/null; npm run build'",
    "build:webpack": "cross-env NODE_ENV=production webpack --mode=production",
    "build:webpack:analyze": "shx rm -rf dist/* && cross-env NODE_ENV=production ANALYZE=true webpack --mode=production",
    "build:webpack:watch": "shx rm -rf dist/* && cross-env NODE_ENV=development webpack --mode=development --watch --progress --info-verbosity verbose",
    "format": "npm run prettier -- --write",
    "lint": "eslint src",
    "prebuild": "rimraf dist && rimraf lib",
    "prettier": "prettier \"**/*.+(js|jsx|ts|tsx|d.ts|md|mdx)\"",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "validate": "npm run lint && npm run prettier -- --list-different && npm run tslint",
    "version": "npm run build"
  },
  "sideEffects": false,
  "unpkg": "dist/blockstack.js"
}
