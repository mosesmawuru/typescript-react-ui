{
  "name": "@blockstack/waffle",
  "version": "1.0.0-alpha.0",
  "description": "Blockstack UI components built using React and styled-components with styled-system.",
  "main": "dist/index.js",
  "module": "dist/es/index.js",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:cjs && npm run build:es && npm run build:copy-types",
    "build:cjs": "cross-env NODE_ENV=production BABEL_ENV=cjs babel ./src --out-dir ./dist --ignore \"**/examples.js\"",
    "build:esm": "cross-env NODE_ENV=production BABEL_ENV=esm babel ./src --out-dir ./dist/esm --ignore \"**/examples.js\"",
    "build:es": "cross-env NODE_ENV=production BABEL_ENV=es babel ./src --out-dir ./dist/es --ignore \"**/examples.js\"",
    "build:umd": "cross-env NODE_ENV=production-umd rollup -c",
    "build:copy-types": "node ./scripts/copy-files.js",
    "version": "npm run build",
    "lint": "eslint src",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "prettier": "prettier \"**/*.+(js|jsx|ts|tsx|d.ts|md|mdx)\"",
    "format": "npm run prettier -- --write",
    "validate": "npm run lint && npm run prettier -- --list-different && npm run tslint",
    "build:watch": "nodemon -w src -x 'rm .babelrc &> /dev/null; npm run build'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.ts": [
      "tslint -c tslint.json"
    ],
    "**/*.+(js|jsx|ts|tsx|d.ts|md|mdx)": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@styled-system/css": "5.0.13",
    "@styled-system/should-forward-prop": "5.0.12",
    "@types/color": "^3.0.0",
    "@types/styled-components": "^4.1.19",
    "@types/styled-system": "^5.1.2",
    "@types/styled-system__css": "^5.0.4",
    "color": "3.1.2",
    "prop-types": "^15.7.2",
    "react-spring": "8.0.23",
    "styled-system": "5.0.5",
    "use-dark-mode": "2.3.1",
    "use-events": "^1.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/plugin-transform-object-assign": "7.2.0",
    "@babel/plugin-transform-runtime": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "3.2.0",
    "babel-plugin-react-remove-properties": "0.3.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "cross-env": "5.2.0",
    "fs-extra": "8.1.0",
    "glob": "7.1.4",
    "path": "0.12.7",
    "prettier": "^1.18.2",
    "rimraf": "2.6.3",
    "rollup": "1.18.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.0.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.1.1"
  },
  "peerDependencies": {
    "react": "16.x",
    "react-dom": "16.x",
    "styled-components": "4.x"
  },
  "author": "Blockstack Product Team",
  "license": "MIT",
  "homepage": "https://waffle.blockstack.design/",
  "repository": "https://github.com/blockstackpbc/blockstack-ui"
}
